Host *.plek.org
    ForwardAgent yes
    AddKeysToAgent yes

# Format is RemoteForward <remote_socket> <local_extra_stocket>
Host one.plek.org
    RemoteForward /run/user/1000/gnupg/S.gpg-agent /run/user/1000/gnupg/S.gpg-agent.extra

Host two.plek.org
    RemoteForward /home/kelp/.gnupg/S.gpg-agent /run/user/1000/gnupg/S.gpg-agent.extra

Host four.plek.org
    RemoteForward /home/kelp/.gnupg/S.gpg-agent /run/user/1000/gnupg/S.gpg-agent.extra

Host *.plek.local
    ForwardAgent yes
    AddKeysToAgent yes

Host *
    ControlMaster auto
    ControlPersist 3600
    ControlPath /tmp/ssh-control-master-%C
