Host *.plek.org
    ForwardAgent yes
    AddKeysToAgent yes
    User tc

Host *.plek.local
    ForwardAgent yes
    AddKeysToAgent yes
    User kelp

Host *
    ControlMaster auto
    ControlPersist 3600
    # don't drop connection if network is down temporarily (eg, suspend)
    TCPKeepAlive no
    # but do send ssh keepalives every minute to keep firewalls happy
    ServerAliveInterval 60
    ServerAliveCountMax 10
    ControlPath ~/.ssh/socket-%r@%h:%p

Include config.d/*
