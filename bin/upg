#!/bin/sh
#
# handy script to upgrade and update all the things on various systems

arch_upgrade() {
	echo "updating packages"
	if yay -v &> /dev/null; then
		yay
	else
		sudo pacman -Syu
	fi
	$HOME/.config/motd/motd.fish
}

darwin_upgrade() {
	sudo softwareupdate -iaR
	brew update
	brew upgrade
	rustup self update
	rustup update
}

debian_upgrade() {
	echo "updating packages"
	sudo apt-get update
	sudo apt-get dist-upgrade
	sudo apt-get autoremove
	$HOME/.config/motd/motd.fish
}

freebsd_upgrade() {
	echo "Current / Latest Version:"
	freebsd-version -k -u

	echo "updating packages"
	sudo pkg upgrade

	echo "updating FreeBSD"
	sudo freebsd-update fetch install
	$HOME/.config/motd/motd.fish
}

openbsd_upgrade()
{
	# Check if we're on a release or a snapshot. Exit status will be 1
	# if running a snapshot.
	syspatch -l 2> /dev/null
	RELEASE=$?

	echo "updating packages"
	doas pkg_add -Uu

	if [ $RELEASE = 0 ]; then
		echo "Applying latests syspatches or upgrade"
		doas sysupgrade -nr 2> /dev/null || doas syspatch
	else
		echo "updating the system to the latest snapshot"
		doas sysupgrade -n || echo "Upgrade failed" && exit 1
	fi

	$HOME/.config/motd/motd.fish
	echo "Reboot now to complete your upgrade"
}

pi_upgrade() {
	debian_upgrade
	if [ -x /usr/local/bin/pihole ] ; then
		pihole -g -up
	fi
}

OS=$(uname -s)

case $OS in
	Darwin)
		darwin_upgrade
		;;
	FreeBSD)
		freebsd_upgrade
		;;
	Linux)
		DIST=$(lsb_release -si)
		case $DIST in
			Arch)
				arch_upgrade
				;;
			Debian)
				debian_upgrade
				;;
			Raspbian)
				pi_upgrade
				;;
			*)
				echo "I don't know how to upgrade $DIST"
				;;
		esac
		;;
	OpenBSD)
		openbsd_upgrade
		;;
	*)
		echo "I don't know how to upgrade $OS"
		;;
esac
